[commit]
	gpgsign = true

[core]
	autocrlf = input
	pager = less
  excludesfile = ~/.gitexcludes

[log]
  decorate = true
 
[color]
  branch = auto
  diff = auto
  status = auto
  grep = auto
[alias]
  st = status
  co = checkout
  br = branch
  ci = commit
  cim = commit -a -m
  gr = log --graph --all
  diffw = diff --word-diff=color
  lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
  
[push]
  default = simple
[pull]
  rebase = true
[branch]
  autosetuprebase = always
[gpg]
  program = /usr/bin/gpg


